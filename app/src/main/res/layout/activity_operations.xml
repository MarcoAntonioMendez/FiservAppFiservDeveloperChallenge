<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff6600"
    tools:context=".OperationsActivity">

    <TextView
        android:id="@+id/greet_user_text_view_operations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/operations_account_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:text="Cuentas"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#DE5900">

        <LinearLayout
            android:id="@+id/linear_layout_for_accounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

    <ImageView
        android:id="@+id/operations_plus_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/plus_sign"
        android:onClick="startCompleteMenuActivity"/>

    <ImageView
        android:id="@+id/log_out_icon_in_operations_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:srcCompat="@drawable/log_out_icon"
        android:onClick="goBackToLogInActivityFromOperationsActivity"/>

    <TextView
        android:id="@+id/log_out_text_view_in_operations_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="65dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/plus_sign_text_view_in_operations_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MÃ¡s"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:layout_gravity="left"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="14dp"/>


</android.support.design.widget.CoordinatorLayout>