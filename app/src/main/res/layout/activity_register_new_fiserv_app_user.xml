<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterNewFiservAppUser"
    android:background="#ff6600">

    <ImageView
        android:id="@+id/fiserv_logo_in_register_new_fiserv_app_user"
        android:layout_width="200dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/fiserv_logo"/>

    <TextView
        android:id="@+id/welcome_sign_in_register_new_fiserv_app_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Bienvenido"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="35dp"/>

    <TextView
        android:id="@+id/sign_up_to_start_using_the_best_banking_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:text="¡Regístrate para tener la mejor experienia financiera!"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"/>

    <EditText
        android:id="@+id/full_name_in_register_new_fiserv_app_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre Completo"
        android:fontFamily="sans-serif"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:backgroundTint="#FFFFFF"/>

    <EditText
        android:id="@+id/user_email_register_new_fiserv_app_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Correo Electrónio"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:backgroundTint="#FFFFFF"/>

    <EditText
        android:id="@+id/phone_number_register_new_fiserv_app_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:ems="10"
        android:inputType="number"
        android:text="Número Telefónico"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:backgroundTint="#FFFFFF"/>

    <EditText
        android:id="@+id/password_register_new_fiserv_app_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Contraseña"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:backgroundTint="#FFFFFF"/>

    <EditText
        android:id="@+id/repeat_password_register_new_fiserv_app_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Contraseña"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:backgroundTint="#FFFFFF"/>

    <Button
        android:id="@+id/register_me_button_in_register_new_fiserv_app_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:text="¡Regístrame!"
        android:textColor="#FFFFFF"
        android:background="#FF7700"/>


</android.support.design.widget.CoordinatorLayout>