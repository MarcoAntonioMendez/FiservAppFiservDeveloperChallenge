<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotMyPasswordActivity"
    android:background="#ff6600">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/fiserv_logo" />

    <TextView
        android:id="@+id/dont_worry_text_view_forgot_my_password_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="No te preocupes si olvidaste tu contraseña, sólo ingresa tu correo electrónico y te enviaremos un correo electrónico con las instrucciones a seguir :D."
        android:fontFamily="sans-serif"
        android:textColor="#FFFFFF"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/enter_email_edit_text_forgot_my_password_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="textEmailAddress"
        android:text="Correo Electrónico"
        android:textColor="#FFFFFF"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/send_email_button_forgot_my_password_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:text="Enviar"
        android:textSize="25dp"
        android:fontFamily="sans-serif"
        android:background="#FF7700"
        android:textColor="#FFFFFF"
        />
</android.support.design.widget.CoordinatorLayout>